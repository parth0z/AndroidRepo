<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExperimentWithAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExperimentWithAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExperimentWithAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExperimentWithAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontInterBold" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="FontInterSemiBold" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="FontInterRegular" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>