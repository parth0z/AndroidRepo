<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animation.TranslationAnimation">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/default_20dp"
        android:text="Hello, who are you!!!"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomBar"
        android:layout_marginStart="@dimen/default_10dp"
        android:layout_marginBottom="@dimen/default_10dp">

        <ImageView
            android:id="@+id/eyeOpenIv"
            android:layout_width="@dimen/default_24dp"
            android:layout_height="@dimen/default_24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_eye_enable" />

        <TextView
            android:id="@+id/viewTv"
            style="@style/FontInterBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_10dp"
            android:layout_toEndOf="@id/eyeOpenIv"
            android:text="view"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_10dp"
            android:text="$3,406"
            android:layout_marginEnd="@dimen/default_10dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eyeCloseIv"
            android:layout_width="@dimen/default_30dp"
            android:layout_height="@dimen/default_30dp"
            android:layout_toEndOf="@id/amountTv"
            android:src="@drawable/ic_eye_disable"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:layout_marginTop="@dimen/default_20dp"
        android:src="@drawable/ic_quest_flag" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_20dp"
        android:indeterminate="false"
        android:progress="75"
        app:indicatorColor="#388E3C"
        app:indicatorInset="0dp"
        app:indicatorSize="@dimen/default_48dp"
        app:trackCornerRadius="50dp" />


    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_40dp"
        android:background="@color/green" />

</RelativeLayout>